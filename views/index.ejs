<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat with files</title>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/js/index.js" defer></script>
    <script src="/js/socket.js" defer></script>
    <script src="/js/audio.js" defer></script>
    <script src="/js/chat.js" defer></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <h3>Messages</h3>
      <div id="users-count-container">
        <span>Online: </span>
        <span id="users-count">1</span>
      </div>
      <div>
        <input type="text" id="name-input" placeholder="Your name" />
      </div>
    </header>
    <main>
      <div id="messages-container"></div>
      <div id="typing-label" class="typing-label hide">
        <span>Someone's is typing...</span>
      </div>
      <div id="to-scroll"></div>
    </main>
    <div id="inputs-container">
      <div id="message-input-container">
        <input type="text" id="message-input" placeholder="Message" />
        <button onclick="sendMessage()">Send</button>
      </div>
      <div id="image-input-container">
        <label for="image-input">Select a image</label>
        <input type="file" id="image-input" accept="image/*" />
      </div>
      <div>
        <button id="start-recording-button">Start Recording</button>
        <button id="stop-recording-button" disabled>Send</button>
        <button id="cancel-recording-button" disabled>Cancel Recording</button>
        <div>
          <span id="recording-label" class="hide">Recording...</span>
        </div>
      </div>
    </div>
  </body>
</html>
